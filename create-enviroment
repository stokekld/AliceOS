set +h
umask 022

CURRENTDIR=$(pwd)

LFS=$CURRENTDIR/lfs
LFSTOOLS=$CURRENTDIR/stages

SOURCES=$LFS/sources
TRUETOOLS=$LFS/tools
TOOLS=/tools

COMPILATION=$LFSTOOLS/compilation
CHECKSYS=$LFSTOOLS/checksys
BUILD=$LFSTOOLS/build

LC_ALL=POSIX
LFS_TGT=$(uname -m)-lfs-linux-gnu

PATH=$TOOLS/bin:/bin:/usr/bin

export CURRENTDIR LFS LFSTOOLS SOURCES TRUETOOLS TOOLS COMPILATION CHECKSYS BUILD LC_ALL LFS_TGT PATH
