set +h
umask 022

CURRENTDIR=$(pwd)

LFS=$CURRENTDIR/lfs
LFSTOOLS=$CURRENTDIR/stages

SOURCES=$LFS/sources
TOOLS=$LFS/tools

COMPILATION=$LFSTOOLS/compilation
CHECKSYS=$LFSTOOLS/checksys
BUILD=$LFSTOOLS/build

LC_ALL=POSIX
LFS_TGT=$(uname -m)-lfs-linux-gnu

export CURRENTDIR LFS LFSTOOLS SOURCES TOOLS COMPILATION CHECKSYS BUILD LC_ALL LFS_TGT
